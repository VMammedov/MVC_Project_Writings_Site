@using EntityLayer.Concrete
@model List<Talent>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Skills</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="crossorigin" />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&amp;family=Roboto:wght@300;400;500;700&amp;display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&amp;family=Roboto:wght@300;400;500;700&amp;display=swap" media="print" onload="this.media='all'" />
    <noscript>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&amp;family=Roboto:wght@300;400;500;700&amp;display=swap" />
    </noscript>
    <link href="~/AdminLTE-3.0.4/TalentPage/css/font-awesome/css/all.min.css?ver=1.2.0" rel="stylesheet">
    <link href="~/AdminLTE-3.0.4/TalentPage/css/bootstrap.min.css?ver=1.2.0" rel="stylesheet">
    <link href="~/AdminLTE-3.0.4/TalentPage/css/aos.css?ver=1.2.0" rel="stylesheet">
    <link href="~/AdminLTE-3.0.4/TalentPage/css/main.css?ver=1.2.0" rel="stylesheet">
    <noscript>
        <style type="text/css">
            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }
        </style>
    </noscript>
</head>
<body id="top">
    <header class="d-print-none">
        <div class="container text-center text-lg-left">
            <div class="py-3 clearfix">
                <h1 class="site-title mb-0">Vusal Mammadli</h1>
                <div class="site-nav">
                    <nav role="navigation">
                        <ul class="nav justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link" href="https://twitter.com/mammedov_v" title="Twitter"><i class="fab fa-twitter"></i><span class="menu-title sr-only">Twitter</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://m.facebook.com/VMammadliV" title="Facebook"><i class="fab fa-facebook"></i><span class="menu-title sr-only">Facebook</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://www.instagram.com/_mammedov_0/" title="Instagram"><i class="fab fa-instagram"></i><span class="menu-title sr-only">Instagram</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://github.com/VMammedov" title="Github"><i class="fab fa-github"></i><span class="menu-title sr-only">Github</span></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="page-content">
        <div class="container">
            <div class="cover shadow-lg bg-white">
                <div class="cover-bg p-3 p-lg-4 text-white">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="avatar hover-effect bg-white shadow-sm p-1"><img src="~/AdminLTE-3.0.4/TalentPage/images/avatar.jpg" width="200" height="200" /></div>
                        </div>
                        <div class="col-lg-8 col-md-7 text-center text-md-start">
                            <h2 class="h1 mt-2" data-aos="fade-left" data-aos-delay="0">Vusal Mammadli</h2>
                            <p data-aos="fade-left" data-aos-delay="100">C# Developer</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="about-section pt-4 px-3 px-lg-4 mt-1">
        <div class="row">
            <div class="col-md-6">
                <h2 class="h3 mb-3">About Me</h2>
                <p>Hello! I’m Vusal Mammadli. I am studying Computer Science in Azerbaijan State Oil and Industry University. My speciality is Programmer. My skills are below.</p>
            </div>
            <div class="col-md-5 offset-md-1">
                <div class="row mt-2">
                    <div class="col-sm-4">
                        <div class="pb-1">Age</div>
                    </div>
                    <div class="col-sm-8">
                        <div class="pb-1 text-secondary">18</div>
                    </div>
                    <div class="col-sm-4">
                        <div class="pb-1">Email</div>
                    </div>
                    <div class="col-sm-8">
                        <div class="pb-1 text-secondary">vusal.memmedli25@gmail.com</div>
                    </div>
                    <div class="col-sm-4">
                        <div class="pb-1">Phone</div>
                    </div>
                    <div class="col-sm-8">
                        <div class="pb-1 text-secondary">+994-70-841-13-08</div>
                    </div>
                    <div class="col-sm-4">
                        <div class="pb-1">Address</div>
                    </div>
                    <div class="col-sm-8">
                        <div class="pb-1 text-secondary">Baku, Surakhani, Amirjan</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="d-print-none" />
    <div class="skills-section px-3 px-lg-4">
        <h2 class="h3 mb-3" style="text-align:center">Professional Skills</h2>
        @foreach (var item in Model)
        {
            <div class="row" style="margin-left:25%; margin-right:25%; width:100%">
                <div class="col-md-6">
                    <div class="mb-2">
                        <span>@item.TalentName ( @item.TalentPoint% )</span> <a class="btn btn-danger shadow-sm mt-1" href="/Talent/DeleteTalent/@item.TalentID"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
</svg></a>  <a class="btn btn-warning shadow-sm mt-1" href="/Talent/EditTalent/@item.TalentID"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
</svg></a> 
                        <div class="progress my-1">
                            <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @item.TalentPoint%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div style="text-align:center">
            <a class="btn btn-success shadow-sm mt-1" href="/Talent/AddTalent">Add New Talent</a></div>
        </div>
        @foreach (var item in Model)
        {
            <hr class="d-print-none" />
            <div class="work-experience-section px-3 px-lg-4">
                <h2 class="h3 mb-4">@item.TalentName</h2>
                <div class="timeline">
                    <div class="timeline-card timeline-card-primary card shadow-sm">
                        <div class="card-body">
                            <div class="h5 mb-1">@item.TalentName Skill Point is <span class="text-muted h6">@item.TalentPoint/100</span></div>
                            <div>@item.TalentDetail</div>
                        </div>
                    </div>
                </div>
            </div>
        }
    <script src="~/AdminLTE-3.0.4/TalentPage/scripts/bootstrap.bundle.min.js?ver=1.2.0"></script>
    <script src="~/AdminLTE-3.0.4/TalentPage/scripts/aos.js?ver=1.2.0"></script>
    <script src="~/AdminLTE-3.0.4/TalentPage/scripts/main.js?ver=1.2.0"></script>
</body>
</html>


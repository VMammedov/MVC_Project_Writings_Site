@model  List<int>
<body style="font-size:1.05rem">
    <div class="col-md-3">
        <a href="/WriterPanelMessage/NewMessage/" class="btn btn-primary btn-block mb-3">New Message</a>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Options</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item active">
                        <a href="/WriterPanelMessage/Inbox/" class="nav-link">
                            <i class="fas fa-inbox"></i> Inbox
                            <span class="badge bg-danger float-right" style="color:white">@Model[0]</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/WriterPanelMessage/Sendbox/" class="nav-link">
                            <i class="far fa-envelope"></i> Sent
                            <span class="badge bg-danger float-right" style="color:white">@Model[1]</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/WriterPanelMessage/Draftbox/" class="nav-link">
                            <i class="far fa-file-alt"></i> Drafts
                            <span class="badge bg-danger float-right" style="color:white">@Model[2]</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-filter"></i> Spam
                            <span class="badge bg-warning float-right"></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="far fa-trash-alt"></i> Trash
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- /.card -->
    </div>
</body>